{

  "manifest_version": 2,
  "name": "God Mode - Make every website editable",
  "short_name": "God Mode",
  "version": "1.1.1",

  "description": "Edit every website like a simple document.",

  "developer": {
    "name": "Dimitris Mavroudis",
    "url": "http://dimitrismavroudis.gr/"
  },
  
  "icons": {
    "16": "icons/console-16.png",
    "48": "icons/console-48.png",
    "128": "icons/console-128.png"
  },

  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*", "contextMenus"
  ],

  "page_action": {
    "default_icon": {
      "19": "icons/console-19.png",
      "38": "icons/console-38.png"
    },
    "default_title": "Activate/Deactivate God Mode"
  },

  "background": {
    "scripts": ["background.js"]
  }

}
